
<div id="results">
	<div class="section">
	<!--currently not showing up -->
		<img href="<%= @f_background[1] %>" />
		<h2>Weather</h2> 
	</div>
    
    <div class="section"> 
	    <h2>Popular Food and Drink</h2>
		
		
		<div class="container">
		<div class="slide">
		<div class="row">
		<% @google_restaurants.each do |item| %>
		<% @filtered_results = [] %>
			<!-- this is a loop to filter out the results with info that we want to display -->			
			<% if item["photos"] != nil && item["name"] != nil && item["price_level"] != nil && item["rating"] && item["vicinity"] != nil %>
				<% @filtered_results.push(item)%>
			<% end %>
			<% @filtered_results.first(3).each do |item| %>
			<div class="col-sm-6 col-md-4">	
				<h3><%= item["name"] %></h3>
				<p>Price Level: <%= item["price_level"] %></p>
				<p>Rating: <%= item["rating"] %></p>
				<p>Address: <%= item["vicinity"] %></p>
				<img class="resultsImage" src="<%= @photo_prefix + item["photos"][0]["photo_reference"] + @key %>" />
			</div>
			<% end %> <!-- end filtered_results loop -->	
		<% end %> <!-- end google_restaurants loop -->
		</div>
		</div><!-- end slide -->
		</div>
	</div>
		
		

	    </div> <!-- end section -->
    
    <div class="section">
    <h2>Arts</h2>
		<% @google_art.each do |item| %>
			<% if item["photos"] != nil && item["name"] != nil && item["rating"] && item["vicinity"] != nil %>
		<div class="well">
			<h1><%= item["name"] %></h1>
			<p>Rating: <%= item["rating"] %></p>
			<p>Address: <%= item["vicinity"] %></p>
			<p>Photo ref: <img src="<%= @photo_prefix + item["photos"][0]["photo_reference"] + @key %>" /></p>
		</div>
			<% end %>
		<% end %>
    </div>
    
    <div class="section">
    <h2>Nightlife</h2>
		<% @google_clubs.each do |item| %>
			<% if item["photos"] != nil && item["name"] != nil && item["rating"] && item["vicinity"] != nil %>
		<div class="well">
			<h1><%= item["name"] %></h1>
			<p>Rating: <%= item["rating"] %></p>
			<p>Address: <%= item["vicinity"] %></p>
			<p>Photo ref: <img src="<%= @photo_prefix + item["photos"][0]["photo_reference"] + @key %>" /></p>
		</div>
			<% end %>
		<% end %>	
    </div>    
</div>








